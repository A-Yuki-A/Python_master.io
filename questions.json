"use strict";

/* =====================================================
   共通ユーティリティ
===================================================== */
const $ = (id) => document.getElementById(id);

/* =====================================================
   デフォルト学習内容（questions.json が無い場合の保険）
===================================================== */
const DEFAULT_LEARN_TOPICS = [
  "rangeを使った繰り返し",
  "変数と値の変化",
  "実行結果の読み取り",
  "共通テスト形式の疑似コード"
];

/* =====================================================
   状態管理
===================================================== */
const state = {
  questions: [],
  learnTopics: [],
  idx: 0
};

/* =====================================================
   questions.json 読み込み
===================================================== */
async function loadQuestions() {
  try {
    const res = await fetch("questions.json", { cache: "no-store" });
    if (!res.ok) throw new Error("HTTP " + res.status);
    const json = await res.json();

    state.questions = json.questions || [];
    state.learnTopics = json.meta?.learnTopics || [];
  } catch (e) {
    console.warn("questions.json を読み込めませんでした", e);
    state.questions = [];
    state.learnTopics = [];
  }
}

/* =====================================================
   TOP画面（index.html）
===================================================== */
function setTopLearnTopics() {
  const ul = $("learnList");
  if (!ul) return;

  const topics = state.learnTopics.length
    ? state.learnTopics
    : DEFAULT_LEARN_TOPICS;

  ul.innerHTML = "";
  topics.forEach(t => {
    const li = document.createElement("li");
    li.textContent = t;
    ul.appendChild(li);
  });

  const note = $("learnNote");
  if (note) {
    note.textContent =
      "※ この一覧は questions.json の meta.learnTopics から自動表示しています。";
  }
}

/* =====================================================
   game画面（game.html）
   ※ あなたの questions.json 形式に合わせて表示
===================================================== */
function renderQuestion() {
  const q = state.questions[state.idx];

  if (!q) {
    if ($("promptText")) {
      $("promptText").textContent =
        "問題データがありません。questions.json を確認してください。";
    }
    return;
  }

  /* --- ステージ名 --- */
  const stageEl = $("stageBadge");
  if (stageEl) {
    stageEl.textContent = q.stageName || "ステージ";
  }

  /* --- 問題ID / 問題文 --- */
  if ($("qidPill")) $("qidPill").textContent = q.id || `Q${state.idx + 1}`;
  if ($("promptText")) $("promptText").textContent = q.prompt || "";

  /* --- Pythonコード / 共通テスト用言語 --- */
  if ($("pythonCode")) $("pythonCode").textContent = q.pythonCode || "";
  if ($("refCode")) $("refCode").textContent = q.refCode || "";

  /* --- 長老のことば --- */
  if ($("talkText")) $("talkText").textContent = q.preTalk || "";

  /* --- 画像（JSONは preImage） --- */
  const imgEl = $("talkImage");
  if (imgEl) {
    const imgPath = q.preImage || "";
    if (imgPath) {
      imgEl.hidden = false;

      // 画像が見つからない場合、Consoleに理由が出る
      imgEl.onerror = () => {
        console.warn("画像が読み込めません。パス/ファイル名を確認:", imgEl.src);
      };

      imgEl.src = imgPath;
    } else {
      imgEl.removeAttribute("src");
      imgEl.hidden = true;
    }
  }

  /* --- 進捗 --- */
  if ($("progressText")) {
    $("progressText").textContent = `${state.idx + 1}/${state.questions.length}`;
  }

  /* --- レベル表示（任意：levelAwardを使って表示を変えたいならここで） --- */
  // いまは固定表示でもOK。必要なら後で「累積レベル」機能を作ります。

  /* --- 選択肢 --- */
  const form = $("choicesForm");
  const checkBtn = $("checkBtn");

  if (form) {
    form.innerHTML = "";

    (q.choices || []).forEach((text, i) => {
      const label = document.createElement("label");
      label.className = "choice";
      label.innerHTML = `
        <input type="radio" name="choice" value="${i}">
        <span class="choice__text"></span>
      `;
      label.querySelector(".choice__text").textContent = String(text);
      form.appendChild(label);
    });

    if (checkBtn) checkBtn.disabled = true;

    form.addEventListener(
      "change",
      () => {
        if (checkBtn) checkBtn.disabled = false;
      },
      { once: true }
    );
  }

  /* --- 結果表示欄はいったん隠す（次に「判定」処理を付ける時に使う） --- */
  const resultBox = $("resultBox");
  if (resultBox) resultBox.hidden = true;
}

/* =====================================================
   初期化
===================================================== */
document.addEventListener("DOMContentLoaded", async () => {
  await loadQuestions();

  // index.html
  if ($("learnList")) {
    setTopLearnTopics();
  }

  // game.html
  if ($("promptText")) {
    renderQuestion();
  }

  // 冒険開始ボタン
  const startBtn = $("startAdventureBtn");
  if (startBtn) {
    startBtn.addEventListener("click", () => {
      location.href = "game.html";
    });
  }
});
